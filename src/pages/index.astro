---
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Announcement from "../sections/Announcement.astro";
import Shows from "../sections/Shows.astro";
import { getSettings } from "@api/queries";
import Videos from "../sections/Videos.astro";
import Merch from "../sections/Merch.astro";
import Contact from "../sections/Contact.astro";
import Footer from "../sections/Footer.astro";
import { getSeo } from "../api/queries";

const settings = await getSettings();
const seo = await getSeo();
---

<Layout
  title="Chaosbay | Progressive Metalcore"
  primaryColor={settings.primaryColor.hex}
  secondaryColor={settings.secondaryColor.hex}
  seo={seo}
>
  <Header logo={settings.logo} lettering={settings.lettering} />
  <main class="py-16">
    <div class="max-w-3xl m-auto">
      <Announcement />
      <Shows />
      <Merch />
      <Videos />
      <Contact />
    </div>
  </main>
  <Footer />
</Layout>

