---
import SectionHeading from "../components/SectionHeading.astro";
import { getMerch } from "../api/queries";
import { desktopImage } from "../lib/image-url";
import Button from "../components/Button.astro";
import Section from "../components/Section.astro";

const schema = (await getMerch())[0];
---

<Section id="merch">
  <SectionHeading>Merch</SectionHeading>
  <div class="grid md:grid-cols-[repeat(2,50%)] gap-8">
    {
      schema.merchItems.map((item) => (
        <div>
          <img src={desktopImage(item.image)} alt={item.name} class="mb-4" />
          <Button class="w-full">Shop Now</Button>
        </div>
      ))
    }
  </div>
</Section>
