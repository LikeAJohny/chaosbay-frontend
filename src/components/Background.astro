<div class="background">
  <img src="/circle-black-optimized.svg" class="circle" />
</div>

<style>
  @keyframes spinX {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }

  @keyframes fade {
    0% {
      color: black
    }
    100% {
      color: white
    }
  }

  body {
    position: relative;
  }

  .background {
    position: fixed;
    top: calc(50% + 4rem);
    left: 50%;
    transform: translate(-50%, calc(-50% - 2rem));
    width: 100dvw;
    max-width: 60rem;
    aspect-ratio: 1;
    z-index: -100;
  }

  .circle {
    width: 100%;
    height: 100%;
    opacity: 0.25;
    animation: spinX 240s linear infinite, fade 240s linear infinite;
  }
</style>
