---
import Button from './Button.astro';
---

<nav
  class="border-gray-200 bg-gradient-to-r from-primary-color via-secondary-color to-gray-800"
>
  <div
    class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4"
  >
    <a href="/" class="flex items-center">
      <img src="/mini-circle.png" class="h-8 mr-3" alt="Flowbite Logo" />
      <span
        class="self-center text-2xl font-semibold whitespace-nowrap text-white uppercase"
        >Chaosbay</span
      >
    </a>
    <div class="flex md:order-2">
      <Button>Newsletter</Button>
      <button
        data-collapse-toggle="navbar-cta"
        type="button"
        class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm rounded-lg md:hidden focus:outline-none focus:ring-2 text-gray-400 hover:bg-gray-700 focus:ring-gray-600"
        aria-controls="navbar-cta"
        aria-expanded="false"
      >
        <span class="sr-only">Open main menu</span>
        <svg
          class="w-5 h-5"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 17 14"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M1 1h15M1 7h15M1 13h15"></path>
        </svg>
      </button>
    </div>
    <div
      class="items-center justify-between hidden w-full md:flex md:w-auto md:order-1"
      id="navbar-cta"
    >
      <ul
        class="flex flex-col font-medium p-4 md:p-0 mt-4 border rounded-lg md:flex-row md:space-x-8 md:mt-0 md:border-0 border-gray-700"
      >
        <li>
          <a
            href="#shows"
            class="block py-2 pl-3 pr-4 text-white bg-blue-700 rounded md:bg-transparent md:p-0 md:hover:text-gray-800"
            aria-current="page"
          >
            Shows
          </a>
        </li>
        <li>
          <a
            href="#merch"
            class="block py-2 pl-3 pr-4 rounded md:p-0 md:hover:text-gray-800 text-white hover:bg-gray-700 hover:text-white md:hover:bg-transparent border-gray-700"
          >
            Merch
          </a>
        </li>
        <li>
          <a
            href="#videos"
            class="block py-2 pl-3 pr-4 rounded md:p-0 md:hover:text-gray-800 text-white hover:bg-gray-700 hover:text-white md:hover:bg-transparent border-gray-700"
          >
            Videos
          </a>
        </li>
        <li>
          <a
            href="#contact"
            class="block py-2 pl-3 pr-4 rounded md:p-0 md:hover:text-gray-800 text-white hover:bg-gray-700 hover:text-white md:hover:bg-transparent border-gray-700"
          >
            Contact
          </a>
        </li>
      </ul>
    </div>
  </div>
</nav>
