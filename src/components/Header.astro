---
import Button from './Button.astro';
---

<script>
  const navBar = document.querySelector('#navbar-cta');
  const menuBtn = document.querySelector('#menu-button');
  menuBtn.addEventListener('click', () => {
    navBar.classList.toggle('hidden');
  });
</script>

<nav
  class="fixed z-50 w-full border-gray-200 bg-gradient-to-r to-gray-800 from-primary-color via-secondary-color"
>
  <div
    class="mx-auto flex max-w-screen-xl flex-wrap items-center justify-between p-4"
  >
    <a href="/" class="flex items-center">
      <img src="/mini-circle.png" class="mr-3 h-8" alt="Chaosbay Logo" />
      <span
        class="self-center whitespace-nowrap text-2xl font-semibold uppercase text-white"
        >Chaosbay</span
      >
    </a>
    <div class="flex md:order-2">
      <Button>Newsletter</Button>
      <button
        data-collapse-toggle="navbar-cta"
        type="button"
        class="inline-flex h-10 w-10 items-center justify-center rounded-lg p-2 text-sm text-gray-400 focus:outline-none md:hidden"
        aria-controls="navbar-cta"
        aria-expanded="false"
        id="menu-button"
      >
        <span class="sr-only">Open main menu</span>
        <svg
          class="h-5 w-5"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 17 14"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M1 1h15M1 7h15M1 13h15"></path>
        </svg>
      </button>
    </div>
    <div
      class="hidden w-full items-center justify-between md:order-1 md:flex md:w-auto"
      id="navbar-cta"
    >
      <ul
        class="mt-4 flex flex-col p-4 font-medium md:space-x-8 md:mt-0 md:flex-row md:p-0 text-right"
      >
        <li>
          <a
            href="#shows"
            class="block rounded py-2 pr-4 pl-3 text-white md:bg-transparent md:p-0 md:hover:text-gray-800"
            aria-current="page"
          >
            Shows
          </a>
        </li>
        <li>
          <a
            href="#merch"
            class="block rounded border-gray-700 py-2 pr-4 pl-3 text-white hover:bg-gray-700 hover:text-white md:p-0 md:hover:bg-transparent md:hover:text-gray-800"
          >
            Merch
          </a>
        </li>
        <li>
          <a
            href="#videos"
            class="block rounded border-gray-700 py-2 pr-4 pl-3 text-white hover:bg-gray-700 hover:text-white md:p-0 md:hover:bg-transparent md:hover:text-gray-800"
          >
            Videos
          </a>
        </li>
        <li>
          <a
            href="#contact"
            class="block rounded border-gray-700 py-2 pr-4 pl-3 text-white hover:bg-gray-700 hover:text-white md:p-0 md:hover:bg-transparent md:hover:text-gray-800"
          >
            Contact
          </a>
        </li>
      </ul>
    </div>
  </div>
</nav>
