---
import { desktopImage } from "../lib/image-url";

const { logo, lettering } = Astro.props;
---

<script>
  const navBar = document.querySelector("#navbar-cta");
  const menuBtn = document.querySelector("#menu-button");
  menuBtn.addEventListener("click", () => {
    navBar.classList.toggle("hidden");
  });
  const navLink = navBar.querySelectorAll("a");
  navLink.forEach((link) => {
    link.addEventListener("click", () => navBar.classList.toggle("hidden"));
  });
</script>

<header
  class="fixed z-50 w-full text-xl shadow-sm bg-gray-950 font-headline shadow-secondary-color"
>
  <nav class="w-full">
    <div
      class="mx-auto flex max-w-screen-xl flex-wrap items-center justify-between p-4 md:justify-start md:gap-4"
    >
      <a href="/">
        <img src={desktopImage(logo)} class="mr-3 h-8" alt="Chaosbay Logo" />
      </a>
      <a href="/">
        <img
          src={desktopImage(lettering)}
          class="mr-3 h-6"
          alt="Chaosbay Lettering"
        />
      </a>
      <div class="flex md:sr-only md:order-2">
        <button
          data-collapse-toggle="navbar-cta"
          type="button"
          class="inline-flex h-10 w-10 items-center justify-center rounded-lg p-2 text-sm text-white focus:outline-none md:hidden"
          aria-controls="navbar-cta"
          aria-expanded="false"
          id="menu-button"
        >
          <span class="sr-only">Open main menu</span>
          <svg
            class="h-5 w-5"
            aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 17 14"
          >
            <path
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M1 1h15M1 7h15M1 13h15"></path>
          </svg>
        </button>
      </div>
      <div
        class="hidden w-full items-center justify-between md:order-1 md:flex md:w-auto md:flex-grow md:justify-end"
        id="navbar-cta"
      >
        <ul
          class="flex flex-col text-right font-medium md:space-x-8 md:mt-0 md:flex-row md:p-0"
        >
          <li>
            <a
              href="/#announcement"
              class="block rounded border-gray-700 py-2 pr-4 pl-3 text-white hover:text-primary-color hover:underline md:p-0"
              aria-current="page"
            >
              Home
            </a>
          </li>
          <li>
            <a
              href="/#shows"
              class="block rounded border-gray-700 py-2 pr-4 pl-3 text-white hover:text-primary-color hover:underline md:p-0"
              aria-current="page"
            >
              Tour
            </a>
          </li>
          <li>
            <a
              href="/#merch"
              class="block rounded border-gray-700 py-2 pr-4 pl-3 text-white hover:text-primary-color hover:underline md:p-0"
            >
              Merch
            </a>
          </li>
          <li>
            <a
              href="/#videos"
              class="block rounded border-gray-700 py-2 pr-4 pl-3 text-white hover:text-primary-color hover:underline md:p-0"
            >
              Videos
            </a>
          </li>
          <li>
            <a
              href="/#contact"
              class="block rounded border-gray-700 py-2 pr-4 pl-3 text-white hover:text-primary-color hover:underline md:p-0"
            >
              Contact
            </a>
          </li>
          <li>
            <a
              href="https://mailchi.mp/831ff31984c8/chaosbay-newsletter"
              class="block rounded border-gray-700 py-2 pr-4 pl-3 text-secondary-color hover:text-primary-color hover:underline md:p-0"
            >
              Sign Up &rarr;
            </a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>
