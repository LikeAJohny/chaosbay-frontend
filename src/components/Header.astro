---
import { desktopImage } from "../lib/image-url";

const { logo, lettering } = Astro.props;
---

<script>
  const navBar = document.querySelector("#navbar-cta");
  const menuBtn = document.querySelector("#menu-button");
  menuBtn.addEventListener("click", () => {
    navBar.classList.toggle("hidden");
  });
</script>

<header class="fixed z-50 w-full bg-gray-950">
  <nav class="w-full">
    <div
      class="mx-auto flex max-w-screen-xl flex-wrap items-center justify-between p-4"
    >
      <div class="flex items-center gap-4">
        <a href="/">
          <img src={desktopImage(logo)} class="mr-3 h-8" alt="Chaosbay Logo" />
        </a>
        <a href="/">
          <img
            src={desktopImage(lettering)}
            class="mr-3 h-6"
            alt="Chaosbay Lettering"
          />
        </a>
      </div>
      <div class="flex md:order-2 md:sr-only">
        <!--<Button>Newsletter</Button>-->
        <button
          data-collapse-toggle="navbar-cta"
          type="button"
          class="inline-flex h-10 w-10 items-center justify-center rounded-lg p-2 text-sm text-white focus:outline-none md:hidden"
          aria-controls="navbar-cta"
          aria-expanded="false"
          id="menu-button"
        >
          <span class="sr-only">Open main menu</span>
          <svg
            class="h-5 w-5"
            aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 17 14"
          >
            <path
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M1 1h15M1 7h15M1 13h15"></path>
          </svg>
        </button>
      </div>
      <div
        class="hidden w-full items-center justify-between md:order-1 md:flex md:w-auto"
        id="navbar-cta"
      >
        <ul
          class="mt-4 flex flex-col text-right font-medium md:space-x-8 md:mt-0 md:flex-row md:p-0"
        >
          <li>
            <a
              href="/#announcement"
              class="block rounded border-gray-700 py-2 pr-4 pl-3 text-white hover:bg-gray-700 hover:text-white md:p-0 md:hover:bg-transparent md:hover:text-gray-800"
              aria-current="page"
            >
              Home
            </a>
          </li>
          <li>
            <a
              href="/#shows"
              class="block rounded border-gray-700 py-2 pr-4 pl-3 text-white hover:bg-gray-700 hover:text-white md:p-0 md:hover:bg-transparent md:hover:text-gray-800"
              aria-current="page"
            >
              Tour
            </a>
          </li>
          <li>
            <a
              href="/#merch"
              class="block rounded border-gray-700 py-2 pr-4 pl-3 text-white hover:bg-gray-700 hover:text-white md:p-0 md:hover:bg-transparent md:hover:text-gray-800"
            >
              Merch
            </a>
          </li>
          <li>
            <a
              href="/#videos"
              class="block rounded border-gray-700 py-2 pr-4 pl-3 text-white hover:bg-gray-700 hover:text-white md:p-0 md:hover:bg-transparent md:hover:text-gray-800"
            >
              Videos
            </a>
          </li>
          <li>
            <a
              href="/#contact"
              class="block rounded border-gray-700 py-2 pr-4 pl-3 text-white hover:bg-gray-700 hover:text-white md:p-0 md:hover:bg-transparent md:hover:text-gray-800"
            >
              Contact
            </a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>
